<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E0202"
    android:backgroundTint="#8E0202"
    tools:context=".activity_contrasena"

    >


    <View
        android:id="@+id/view30"
        android:layout_width="411dp"
        android:layout_height="71dp"
        android:background="@drawable/cuadrado_abajocontrasena"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/view26"
        android:layout_width="377dp"
        android:layout_height="523dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/cuadrado_contrasena"
        app:layout_constraintBottom_toTopOf="@+id/view30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgVolverLogin"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="79dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/cabin_bold"
        android:text="Recuperaci칩n de Contrase침a"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="31sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/imgVolverLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin_bold"
        android:text="Recuerda tu contrase침a"
        android:textColor="#8E0202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/cabin_semibold"
        android:text="Escribe tu nombre de Usuario"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:fontFamily="@font/cabin_semibold"
        android:text="Escribe tu correo electronico"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuarioRecu" />

    <EditText
        android:id="@+id/txtNombreUsuarioRecu"
        android:layout_width="326dp"
        android:layout_height="37dp"


        android:layout_marginTop="8dp"
        android:backgroundTint="#8E0202"
        android:ems="10"
        android:fontFamily="@font/cabin_semibold"
        android:inputType="text"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/txtCorreoRecu"
        android:layout_width="326dp"
        android:layout_height="37dp"


        android:backgroundTint="#8E0202"
        android:ems="10"
        android:fontFamily="@font/cabin_semibold"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/EnviarCorreo"
        android:layout_width="167dp"
        android:layout_height="71dp"

        android:layout_marginStart="12dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#8D0202"
        android:text="Enviar Correo"
        android:textColor="@color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view26"
        app:layout_constraintEnd_toStartOf="@+id/btnRegistrarse"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:strokeColor="#EE894C"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="167dp"
        android:layout_height="71dp"

        android:layout_marginTop="52dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#8D0202"
        android:text="Recuperar Contrase침a"
        android:textColor="@color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view26"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoRecu"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#EE894C"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="208dp"
        android:layout_height="131dp"
        app:layout_constraintEnd_toEndOf="@+id/view26"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/view26"
        app:layout_constraintTop_toTopOf="@+id/view26"
        app:srcCompat="@drawable/ignisssssss" />


</androidx.constraintlayout.widget.ConstraintLayout>